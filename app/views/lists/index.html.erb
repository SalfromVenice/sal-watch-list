<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1585647347384-2593bc35786b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80');">
  <div class="container">
    <h1>Sal Watch List</h1>
  </div>
</div>
<br>
<div class="d-flex flex-wrap">
  <% @lists.each do |list| %>
    <%= link_to list.name, list_path(list), class: "little-card m-2 text-decoration-none", style:"background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('#{cl_image_path list.image.key, height: 80, crop: :fill}')" %>
  <% end %>
  <button class='btn btn-outline-primary btn-list m-2 show'><%= icon('fas', 'list') + ' Add a new list' %></button>
</div>
<div class="bg d-none">
  <div class="container bg-light col-6 popup">
    <h2>Create a new list</h2>
    <span class="x"><%= icon('fas', 'times-circle') %></span>
    <%= simple_form_for @list do |f| %>
      <%= f.input :name, label: icon('fas', 'file-signature'), placeholder: 'list name' %> <br>
      <%= f.input :image, as: :file, label: icon('fas', 'image') %>
      <br>
      <%= f.button :submit, class: 'btn btn-primary btn-sm'  %>
    <% end %>
  </div>
</div>
